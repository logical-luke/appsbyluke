---
import {Icon} from "astro-icon/components";
---
<div id="app-solutions" class="bg-pink-100 py-16 border-y-4 border-black">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl md:text-4xl font-bold text-center mb-12 transform -rotate-1 inline-block bg-yellow-300 px-6 py-3 border-4 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]">
            Web Apps I Can Build for You
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
            {[
                {
                    title: "SaaS Applications",
                    description: "Turn your idea into a scalable SaaS product",
                    items: [
                        "User Authentication & Teams",
                        "Subscription Management",
                        "Feature Access Control",
                        "API Integration Options"
                    ],
                    icon: "tabler:apps",
                    bgColor: "bg-blue-200"
                },
                {
                    title: "Internal Tools",
                    description: "Streamline your business operations",
                    items: [
                        "Custom Dashboards",
                        "Process Automation",
                        "Data Management",
                        "Team Collaboration"
                    ],
                    icon: "tabler:tool",
                    bgColor: "bg-green-200"
                },
                {
                    title: "Customer Portals",
                    description: "Enhance customer experience with self-service",
                    items: [
                        "User Management",
                        "Document Sharing",
                        "Support Ticketing",
                        "Activity Tracking"
                    ],
                    icon: "tabler:users",
                    bgColor: "bg-purple-200"
                },
                {
                    title: "Admin Panels",
                    description: "Manage your application with ease",
                    items: [
                        "User Administration",
                        "Content Management",
                        "Analytics Dashboard",
                        "Settings Control"
                    ],
                    icon: "tabler:dashboard",
                    bgColor: "bg-pink-200"
                },
                {
                    title: "Booking Systems",
                    description: "Handle appointments and reservations",
                    items: [
                        "Calendar Management",
                        "Automated Scheduling",
                        "Payment Processing",
                        "Email Notifications"
                    ],
                    icon: "tabler:calendar",
                    bgColor: "bg-yellow-200"
                },
                {
                    title: "Data Platforms",
                    description: "Collect, analyze, and visualize your data",
                    items: [
                        "Data Collection Forms",
                        "Custom Reports",
                        "Export Options",
                        "Access Controls"
                    ],
                    icon: "tabler:database",
                    bgColor: "bg-orange-200"
                }
            ].map((group) => (
                    <div class="bg-white border-4 border-black p-6 shadow-[8px_8px_0px_0px_rgba(0,0,0,1)]">
                        <div class="flex flex-col items-center gap-4 mb-4">
                            <div class={`min-w-[48px] w-12 h-12 ${group.bgColor} border-4 border-black flex items-center justify-center shrink-0`}>
                                <Icon name={group.icon} class="w-6 h-6"/>
                            </div>
                            <div class="text-center">
                                <h3 class="text-xl font-bold mb-2">{group.title}</h3>
                            </div>
                        </div>
                        <p class="text-sm my-4">{group.description}</p>
                        <ul class="list-disc list-inside text-sm">
                            {group.items.map((item) => (
                                    <li>{item}</li>
                            ))}
                        </ul>
                    </div>
            ))}
        </div>

        <div class="mt-12 text-center">
            <p class="text-xl font-bold mb-6">Ready to start building your web app? Choose the package that fits your needs!</p>
            <a href="/services"
               class="inline-block text-center bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-6 rounded-none border-4 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] transition-all duration-300 text-xl transform hover:rotate-2">
                See Packages
            </a>
        </div>
    </div>
</div>
