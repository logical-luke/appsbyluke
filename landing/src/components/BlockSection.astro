---
export interface Props {
    backgroundColor: string;
    header?: string;
    id: string;
}

const { backgroundColor, header, id } = Astro.props;
---
<div id={id} class={`${backgroundColor} py-16 border-y-2 border-black`}>
    <div class="max-w-7xl mx-auto px-4 lg:px-8">
        {header && (
            <h2 class="text-3xl md:text-4xl font-bold text-center mb-12 transform inline-block bg-yellow-300 px-6 py-3 border-4 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]">
                {header}
            </h2>
        )}
        <slot />
    </div>
</div>
