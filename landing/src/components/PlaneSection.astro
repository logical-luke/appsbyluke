---
import {Image} from "astro:assets";
import {Icon} from 'astro-icon/components';
import itsABird from '../assets/itsabird.png';
import itsAPlane from '../assets/itsaplane.png';
---
<div id="frequently-asked-questions" class="bg-yellow-100 py-16 border-y-2 border-black">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="mt-20 md:mt-16 mb-6">
            <div class="flex flex-col md:flex-row gap-6 items-center">
                <div class="w-full md:w-1/3 flex flex-row gap-4 md:gap-6 justify-center md:justify-start">
                    <div class="w-1/2">
                        <Image
                            src={itsABird}
                            alt="Comic card with 'It's a bird?' text"
                            width={150}
                            height={200}
                            class="w-full h-auto border-4 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] transform rotate-2"
                        />
                    </div>
                    <div class="w-1/2">
                        <Image
                            src={itsAPlane}
                            alt="Comic card with 'It's a plane?' text"
                            width={150}
                            height={200}
                            class="w-full h-auto border-4 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] transform -rotate-2"
                        />
                    </div>
                </div>
                <div class="w-full md:w-2/3 bg-pink-200 p-6 border-4 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] transform -rotate-2 flex flex-col justify-center h-full">
                    <p class="text-lg font-bold italic">
                        "It's your startup app taking off in weeks instead of months!"
                    </p>
                    <div class="flex justify-end mt-2">
                        <div class="w-8 h-8 bg-yellow-300 border-4 border-black transform rotate-12"></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="flex justify-center mt-12">
            <a
                href="https://calendar.app.google/nhkv4uwW67KvXLAMA"
                target="_blank"
                class="booking-button bg-green-700 hover:bg-green-800 text-white font-bold py-3 px-6 border-4 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] transition-all duration-300 flex items-center justify-center gap-2">
                <Icon name="tabler:calendar" class="w-6 h-6"/>
                Book a Call
            </a>
        </div>
    </div>
</div>
