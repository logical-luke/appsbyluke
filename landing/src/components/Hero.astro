---
import {Image} from 'astro:assets';
import {Icon} from 'astro-icon/components';
import itsABird from '../assets/itsabird.png';
import itsAPlane from '../assets/itsaplane.png';
---

<div class="bg-blue-200 flex items-center justify-center border-y-4 border-black relative overflow-hidden py-16">
    <div class="absolute inset-0 grid grid-cols-10 grid-rows-10 opacity-10">
        {Array(100).fill(null).map((_, i) => (
                <div class={`border border-black ${['bg-yellow-300', 'bg-pink-300', 'bg-green-300', 'bg-purple-300'][i % 4]}`}></div>
        ))}
    </div>

    <div class="absolute top-10 left-10 w-20 h-20 bg-yellow-400 border-4 border-black transform rotate-12"></div>
    <div class="absolute bottom-10 right-10 w-16 h-16 bg-pink-400 border-4 border-black rounded-full"></div>

    <div class="max-w-7xl mx-auto px-4 relative z-10">
        <section id="hero">
            <div class="flex flex-col lg:flex-row gap-8 items-center">
                <div class="w-full lg:w-1/2 transform rotate-1">
                    <div class="bg-white p-6 md:p-8 border-4 border-black shadow-[8px_8px_0px_0px_rgba(0,0,0,1)]">
                        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-black mb-6">LAUNCH YOUR STARTUP APP
                            IN WEEK</h1>
                        <p class="text-lg md:text-xl mb-6">From MVP to advanced application. Clear pricing,
                            structured process, predictable delivery.</p>
                        <div class="flex items-center justify-center">
                            <a
                                    href="pricing"
                                    class="relative text-center bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-6 rounded-none border-4 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] transition-all duration-300 inline-block text-xl transform hover:rotate-2"
                            >
                                Choose Package
                                <div class="absolute -top-2 -left-4 w-8 h-8 bg-purple-400 border-4 border-black rounded-full animate-bounce"></div>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="w-full lg:w-1/2">
                    <div class="bg-white p-6 md:p-8 border-4 border-black shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] transform -rotate-1">
                        <div class="space-y-4">
                            <div class="flex items-center">
                                <div class="w-12 h-12 p-2 border-4 border-black flex items-center justify-center mr-4">
                                    <Icon name="tabler:rocket" class="text-2xl"/>
                                </div>
                                <div>
                                    <h2 class="font-bold">Startup Core</h2>
                                    <p>MVP in week</p>
                                </div>
                            </div>
                            <div class="flex items-center">
                                <div class="w-12 h-12 p-2 border-4 border-black flex items-center justify-center mr-4">
                                    <Icon name="tabler:trending-up" class="text-2xl"/>
                                </div>
                                <div>
                                    <h2 class="font-bold">Growth Packages</h2>
                                    <p>Scale your application</p>
                                </div>
                            </div>
                        </div>
                        <div class="mt-6">
                            <h2 class="text-lg font-bold mb-4">The Development Process</h2>
                            <div class="relative p-4 bg-yellow-100 border-4 border-black">
                                <div class="flex flex-col md:flex-row justify-between items-center gap-8 md:gap-4">
                                    <div class="text-center z-10">
                                        <div class="w-24 h-24 md:w-20 md:h-20 bg-blue-200 border-4 border-black flex items-center justify-center mx-auto mb-2">
                                            <span class="text-sm font-bold">Plan</span>
                                        </div>
                                    </div>
                                    <div class="text-center z-10">
                                        <div class="w-24 h-24 md:w-20 md:h-20 bg-green-200 border-4 border-black flex items-center justify-center mx-auto mb-2">
                                            <span class="text-sm font-bold">Build</span>
                                        </div>
                                    </div>
                                    <div class="text-center z-10">
                                        <div class="w-24 h-24 md:w-20 md:h-20 bg-purple-200 border-4 border-black flex items-center justify-center mx-auto mb-2">
                                            <span class="text-sm font-bold">Delivered</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="absolute left-1/2 top-0 bottom-0 w-4 md:w-auto md:left-0 md:right-0 md:top-1/2 md:h-4 bg-red-400 border-l-4 border-r-4 md:border-l-0 md:border-r-0 md:border-t-4 md:border-b-4 border-black -translate-x-1/2 md:-translate-x-0 md:-translate-y-1/2 z-0"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-20 md:mt-16 mb-6">
                <div class="flex flex-col md:flex-row gap-6 items-center">
                    <div class="w-full md:w-1/3 flex flex-row gap-4 md:gap-6 justify-center md:justify-start">
                        <div class="w-1/2">
                            <Image
                                    src={itsABird}
                                    alt="Comic card with 'It's a bird?' text"
                                    width={150}
                                    height={200}
                                    class="w-full h-auto border-4 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] transform rotate-2"
                            />
                        </div>
                        <div class="w-1/2">
                            <Image
                                    src={itsAPlane}
                                    alt="Comic card with 'It's a plane?' text"
                                    width={150}
                                    height={200}
                                    class="w-full h-auto border-4 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] transform -rotate-2"
                            />
                        </div>
                    </div>
                    <div class="w-full md:w-2/3 bg-pink-200 p-4 border-4 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] transform -rotate-2 flex flex-col justify-center h-full">
                        <p class="text-lg font-bold italic">
                            "It's your startup app taking off in week instead of
                            months!"
                        </p>
                        <div class="flex justify-end mt-2">
                            <div class="w-8 h-8 bg-yellow-300 border-4 border-black transform rotate-12"></div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

<style>
    @keyframes bounce {
        0%, 100% {
            transform: translateY(-25%);
            animation-timing-function: cubic-bezier(0.8, 0, 1, 1);
        }
        50% {
            transform: translateY(0);
            animation-timing-function: cubic-bezier(0, 0, 0.2, 1);
        }
    }

    .animate-bounce {
        animation: bounce 1s infinite;
    }
</style>
