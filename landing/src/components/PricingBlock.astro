---
import {Icon} from 'astro-icon/components';
import BlockSection from "./BlockSection.astro";
---
<BlockSection id="pricing" header="Clear Pricing" backgroundColor="bg-green-50">
    <div class="max-w-(--breakpoint-xl) mx-auto py-4">
        <div class="grid md:grid-cols-2 gap-12">
            <div class="bg-white border-4 border-black p-8 shadow-[8px_8px_0px_0px_rgba(0,0,0,1)]">
                <div class="bg-blue-200 inline-block px-3 py-1 border-2 border-black transform -rotate-2 mb-4">
                    <span class="font-bold">One time</span>
                </div>

                <h3 class="text-3xl font-bold mb-2">MVP Launch</h3>
                <div class="flex items-baseline gap-2 mb-4">
                    <span class="text-4xl font-bold text-blue-600">$2,499</span>
                    <span class="text-gray-600">one-time</span>
                </div>

                <div class="bg-yellow-50 border-2 border-black p-3 mb-8">
                    <div class="flex items-center gap-2">
                        <Icon name="tabler:shield-check" class="w-6 h-6 text-green-600"/>
                        <span class="font-bold">Pay After Delivery</span>
                    </div>
                    <p class="text-sm text-gray-600 mt-1">No upfront costs - pay when your MVP is delivered</p>
                </div>

                <div class="space-y-4 mb-8">
                    <div class="flex items-start gap-3">
                        <Icon name="tabler:rocket" class="w-6 h-6 text-blue-600 shrink-0 mt-1"/>
                        <div>
                            <span class="font-bold">Complete MVP in 2 Weeks</span>
                            <p class="text-gray-600">Fast-track from idea to working product</p>
                        </div>
                    </div>

                    <div class="flex items-start gap-3">
                        <Icon name="tabler:code" class="w-6 h-6 text-blue-600 shrink-0 mt-1"/>
                        <div>
                            <span class="font-bold">Core Feature Implementation</span>
                            <p class="text-gray-600">Your main product functionality</p>
                        </div>
                    </div>

                    <div class="flex items-start gap-3">
                        <Icon name="tabler:paint" class="w-6 h-6 text-blue-600 shrink-0 mt-1"/>
                        <div>
                            <span class="font-bold">Professional Design</span>
                            <p class="text-gray-600">Beautiful, user-friendly interface</p>
                        </div>
                    </div>

                    <div class="flex items-start gap-3">
                        <Icon name="tabler:users" class="w-6 h-6 text-blue-600 shrink-0 mt-1"/>
                        <div>
                            <span class="font-bold">User Management</span>
                            <p class="text-gray-600">Login, profiles, and admin dashboard</p>
                        </div>
                    </div>

                    <div class="flex items-start gap-3">
                        <Icon name="tabler:credit-card" class="w-6 h-6 text-blue-600 shrink-0 mt-1"/>
                        <div>
                            <span class="font-bold">Payment Processing</span>
                            <p class="text-gray-600">Secure payment integration with Stripe</p>
                        </div>
                    </div>

                    <div class="flex items-start gap-3">
                        <Icon name="tabler:device-mobile" class="w-6 h-6 text-blue-600 shrink-0 mt-1"/>
                        <div>
                            <span class="font-bold">Mobile-Friendly</span>
                            <p class="text-gray-600">Works perfectly on all devices</p>
                        </div>
                    </div>

                    <div class="flex items-start gap-3">
                        <Icon name="tabler:cloud-computing" class="w-6 h-6 text-blue-600 shrink-0 mt-1"/>
                        <div>
                            <span class="font-bold">Launch-Ready Setup</span>
                            <p class="text-gray-600">Hosting, domain, SSL security included</p>
                        </div>
                    </div>

                    <div class="flex items-start gap-3">
                        <Icon name="tabler:brain" class="w-6 h-6 text-blue-600 shrink-0 mt-1"/>
                        <div>
                            <span class="font-bold">AI Integration Available</span>
                            <p class="text-gray-600">Optional AI capabilities for your app</p>
                        </div>
                    </div>
                </div>

                <a
                    href="https://calendar.app.google/nhkv4uwW67KvXLAMA"
                    target="_blank"
                    class="booking-button w-full bg-green-700 hover:bg-green-800 text-white font-bold py-3 px-6 border-4 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] transition-all duration-300 flex items-center justify-center gap-2">
                    <Icon name="tabler:calendar" class="w-6 h-6"/>
                    Book a Call
                </a>
            </div>

            <div class="bg-white border-4 border-black p-8 shadow-[8px_8px_0px_0px_rgba(0,0,0,1)]">
                <div class="bg-blue-200 inline-block px-3 py-1 border-2 border-black transform -rotate-2 mb-4">
                    <span class="font-bold">Monthly Retainer</span>
                </div>

                <h3 class="text-3xl font-bold mb-2">Ongoing Support</h3>
                <div class="flex items-baseline gap-2 mb-6">
                    <span class="text-4xl font-bold text-blue-600">$2,999</span>
                    <span class="text-gray-600">/month</span>
                </div>

                <div class="bg-blue-50 border-2 border-black p-3 mb-8">
                    <p class="text-gray-600">Available exclusively for MVP Launch clients</p>
                </div>

                <div class="space-y-4 mb-8">
                    <div class="flex items-start gap-3">
                        <Icon name="tabler:clock" class="w-6 h-6 text-blue-600 shrink-0 mt-1"/>
                        <div>
                            <span class="font-bold">50 Hours Monthly</span>
                            <p class="text-gray-600">Dedicated development time</p>
                        </div>
                    </div>

                    <div class="flex items-start gap-3">
                        <Icon name="tabler:stars" class="w-6 h-6 text-blue-600 shrink-0 mt-1"/>
                        <div>
                            <span class="font-bold">Priority Features</span>
                            <p class="text-gray-600">Continuous app improvement</p>
                        </div>
                    </div>

                    <div class="flex items-start gap-3">
                        <Icon name="tabler:message-circle" class="w-6 h-6 text-blue-600 shrink-0 mt-1"/>
                        <div>
                            <span class="font-bold">Weekly Calls</span>
                            <p class="text-gray-600">Strategic planning & updates</p>
                        </div>
                    </div>

                    <div class="flex items-start gap-3">
                        <Icon name="tabler:tool" class="w-6 h-6 text-blue-600 shrink-0 mt-1"/>
                        <div>
                            <span class="font-bold">Maintenance & Fixes</span>
                            <p class="text-gray-600">Keep your app running smoothly</p>
                        </div>
                    </div>

                    <div class="flex items-start gap-3">
                        <Icon name="tabler:chart-line" class="w-6 h-6 text-blue-600 shrink-0 mt-1"/>
                        <div>
                            <span class="font-bold">Performance Tracking</span>
                            <p class="text-gray-600">Analytics and optimization</p>
                        </div>
                    </div>

                    <div class="flex items-start gap-3">
                        <Icon name="tabler:emergency-bed" class="w-6 h-6 text-blue-600 shrink-0 mt-1"/>
                        <div>
                            <span class="font-bold">Emergency Support</span>
                            <p class="text-gray-600">Same-day issue resolution</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</BlockSection>
