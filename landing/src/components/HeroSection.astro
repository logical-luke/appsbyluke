---
import {Icon} from 'astro-icon/components';
import {Image} from 'astro:assets';
---

<div class="relative">
    <div class="bg-blue-50 flex items-center justify-center border-y-2 border-black overflow-hidden py-4 lg:py-20">
        <div class="max-w-7xl mx-auto px-4 relative z-10">
            <section id="hero" class="mt-32">
                <div class="flex flex-col lg:flex-row gap-8 items-center">
                    <div class="w-full text-center transform rotate-1">
                        <div class="bg-white p-6 md:p-8 border-4 border-black shadow-[8px_8px_0px_0px_rgba(0,0,0,1)]">
                            <h1 class="text-4xl md:text-7xl font-bold text-black mb-4">
                                Launch App In Weeks
                            </h1>
                            <h2 class="text-xl md:text-3xl font-bold text-black mb-8">Efficient, Affordable, Rapid</h2>

                            <div class="flex justify-center mb-8">
                                <div class="grid grid-cols-1 md:grid-cols-3 gap-4 max-w-3xl">
                                    <div class="flex items-center gap-3">
                                        <Icon name="tabler:coin" class="w-6 h-6"/>
                                        <span class="text-lg">Fixed-Price MVP</span>
                                    </div>
                                    <div class="flex items-center gap-3">
                                        <Icon name="tabler:route" class="w-6 h-6"/>
                                        <span class="text-lg">Clear Process</span>
                                    </div>
                                    <div class="flex items-center gap-3">
                                        <Icon name="tabler:shield-check" class="w-6 h-6"/>
                                        <span class="text-lg">Pay After Delivery</span>
                                    </div>
                                </div>
                            </div>

                            <div class="flex flex-col items-center justify-center space-y-4">
                                <a href="https://calendar.app.google/nhkv4uwW67KvXLAMA" target="_blank"
                                    class="relative text-center bg-green-700 hover:bg-green-800 text-white font-bold py-3 px-6 rounded-none border-4 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] transition-all duration-300 inline-block text-xl transform hover:rotate-2 flex items-center gap-2"
                                >
                                    <Icon name="tabler:calendar-event" class="w-6 h-6"/>
                                    Book a Call
                                    <div class="absolute -top-2 -left-4 w-8 h-8 bg-purple-400 border-4 border-black rounded-full animate-bounce"></div>
                                </a>
                                <p class="text-sm text-gray-600 max-w-md">
                                    Zero pressure consultation. Just a friendly chat to understand your vision and explore possibilities.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>

<style>
    @keyframes bounce {
        0%, 100% {
            transform: translateY(-25%);
            animation-timing-function: cubic-bezier(0.8, 0, 1, 1);
        }
        50% {
            transform: translateY(0);
            animation-timing-function: cubic-bezier(0, 0, 0.2, 1);
        }
    }

    .animate-bounce {
        animation: bounce 1s infinite;
    }
</style>
