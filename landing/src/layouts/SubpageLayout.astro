---
import Layout from "./Layout.astro";

export interface Props {
    title: string;
    description: string;
    backgroundColor: 'bg-green-100' | 'bg-blue-100' | 'bg-yellow-100' | 'bg-purple-100' | 'bg-pink-100' | 'bg-gray-100' | 'bg-red-100' | 'bg-orange-100' | 'bg-teal-100' | 'bg-indigo-100' | 'bg-cyan-100';
    header: string;
}

const {title, description, backgroundColor, header} = Astro.props;

const decorativeElements = [
    ["absolute top-0 right-0 w-12 h-12 md:w-24 md:h-24 bg-yellow-400 border-4 border-black transform rotate-12 translate-x-2 -translate-y-2 md:translate-x-8 md:-translate-y-8 z-0",
     "absolute bottom-0 left-0 w-10 h-10 md:w-20 md:h-20 bg-pink-400 border-4 border-black rounded-full -translate-x-4 translate-y-4 md:-translate-x-10 md:translate-y-10 z-0"],
    ["absolute top-0 right-0 w-12 h-12 md:w-24 md:h-24 bg-blue-400 border-4 border-black transform -rotate-12 translate-x-2 -translate-y-2 md:translate-x-8 md:-translate-y-8 z-0",
     "absolute bottom-0 left-0 w-10 h-10 md:w-20 md:h-20 bg-green-400 border-4 border-black rounded-full -translate-x-4 translate-y-4 md:-translate-x-10 md:translate-y-10 z-0"],
    ["absolute top-0 right-0 w-12 h-12 md:w-24 md:h-24 bg-purple-400 border-4 border-black rounded-full translate-x-2 -translate-y-2 md:translate-x-8 md:-translate-y-8 z-0",
     "absolute bottom-0 left-0 w-10 h-10 md:w-20 md:h-20 bg-red-400 border-4 border-black transform rotate-45 -translate-x-4 translate-y-4 md:-translate-x-10 md:translate-y-10 z-0"],
    ["absolute top-0 right-0 w-12 h-12 md:w-24 md:h-24 bg-orange-400 border-4 border-black transform rotate-45 translate-x-2 -translate-y-2 md:translate-x-8 md:-translate-y-8 z-0",
     "absolute bottom-0 left-0 w-10 h-10 md:w-20 md:h-20 bg-teal-400 border-4 border-black rounded-full -translate-x-4 translate-y-4 md:-translate-x-10 md:translate-y-10 z-0"],
    ["absolute top-0 right-0 w-12 h-12 md:w-24 md:h-24 bg-indigo-400 border-4 border-black rounded-full translate-x-2 -translate-y-2 md:translate-x-8 md:-translate-y-8 z-0",
     "absolute bottom-0 left-0 w-10 h-10 md:w-20 md:h-20 bg-cyan-400 border-4 border-black transform -rotate-12 -translate-x-4 translate-y-4 md:-translate-x-10 md:translate-y-10 z-0"],
    ["absolute top-0 right-0 w-12 h-12 md:w-24 md:h-24 bg-lime-400 border-4 border-black transform rotate-180 translate-x-2 -translate-y-2 md:translate-x-8 md:-translate-y-8 z-0",
     "absolute bottom-0 left-0 w-10 h-10 md:w-20 md:h-20 bg-fuchsia-400 border-4 border-black rounded-full -translate-x-4 translate-y-4 md:-translate-x-10 md:translate-y-10 z-0"]
];

const index = title.length % decorativeElements.length;
const [topRight, bottomLeft] = decorativeElements[index];
---

<Layout
        title={title}
        description={description}
>
    <div class={`py-8 border-y-4 border-black min-h-[calc(100vh-288px)] ${backgroundColor}`}>
        <div class="max-w-7xl mx-auto px-4 md:px-6 lg:px-8">
            <div class="bg-white border-4 border-black p-4 md:p-8 shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] relative">
                <div class={topRight}></div>
                <div class={bottomLeft}></div>

                <div class="pr-20 md:pr-28"> <!-- Added padding container -->
                    <h1 class="text-4xl md:text-5xl font-bold text-black transform -rotate-1 break-words mb-8 relative z-10">{header}</h1>
                </div>

                <div class="relative z-10">
                    <slot/>
                </div>
            </div>
        </div>
    </div>
</Layout>
