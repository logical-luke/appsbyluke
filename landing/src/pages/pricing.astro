---
import ServicesGrid from "../components/ServicesGrid.astro";
import SubpageLayout from "../layouts/SubpageLayout.astro";
---

<SubpageLayout
        title="Pricing: App Development | AppsByLuke"
        description="Clear, structured pricing for startup app development. From MVP to advanced applications. Predictable costs and delivery using modern tech stack."
        header="Pricing"
        backgroundColor="bg-green-100"
>
    <ServicesGrid/>

    <div class="max-w-4xl mx-auto px-4 mt-16 mb-20">
        <div class="bg-yellow-100 border-4 border-black p-8 shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] transform -rotate-1 relative">
            <div class="absolute -top-6 -left-6 bg-blue-500 text-white font-bold py-2 px-4 border-4 border-black transform rotate-3 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]">
                Let's Build Together!
            </div>
            <div class="text-center space-y-4">
                <p class="text-2xl font-bold">
                    You bring your brilliant idea, I'll handle all the tech
                </p>
                <p class="text-lg text-gray-700">
                    Focus on what you do best - building your business.
                    I'll take care of the entire technical journey from development to smooth launch.
                </p>
                <div class="pt-2">
                    <span class="inline-block bg-white px-4 py-2 border-2 border-black transform rotate-2 shadow-[2px_2px_0px_0px_rgba(0,0,0,1)]">
                        No technical expertise required!
                    </span>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-12 text-center space-y-6">
        <p class="text-2xl font-extrabold transform -rotate-2 inline-block bg-pink-300 px-6 py-3 border-4 border-black shadow-[6px_6px_0px_0px_rgba(0,0,0,1)]">
            Got questions?
        </p>
        <div class="flex flex-col items-center space-y-4 md:flex-row md:space-y-0 md:space-x-4 justify-center">
            <a href="/faq"
               class="inline-block text-center bg-blue-500 hover:bg-blue-600 text-white font-bold py-3 px-6 rounded-none border-4 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] transition-all duration-300 text-xl transform hover:rotate-2">
                Check out FAQ
            </a>
            <p class="text-2xl font-bold">OR</p>
            <a href="/contact"
               class="inline-block text-center bg-blue-500 hover:bg-blue-600 text-white font-bold py-3 px-6 rounded-none border-4 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] transition-all duration-300 text-xl transform hover:rotate-2">
                Contact Me
            </a>
        </div>
    </div>
</SubpageLayout>
