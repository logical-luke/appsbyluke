---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Faq from "../components/Faq.astro";
---

<Layout
        title="AppsByLuke: Custom Web App Development | Full-Stack Solutions"
        description="Bring ideas to life as web apps. Flexible subscriptions or tailored packages. Full-stack solutions: MVPs to enterprise apps. Expertise in JS, TS, PHP, and more.">
    <Hero/>
    <Faq/>
</Layout>

<script>
    document.addEventListener('astro:page-load', () => {
        const yOffset = 30;
        if (window.location.hash === '#faq') {
            const faqElement = document.getElementById('faq');
            if (faqElement) {
                const y = faqElement.getBoundingClientRect().top + window.scrollY + yOffset;
                window.scrollTo({top: y, behavior: 'smooth'});
            }
        }
    });
</script>