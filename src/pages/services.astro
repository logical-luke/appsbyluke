---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

const packages = [
    {
        name: "Starter Web App",
        price: 5000,
        description: "Perfect for small businesses or startups looking to establish their online presence.",
        features: [
            "Custom designed responsive website",
            "Up to 5 pages",
            "Basic SEO optimization",
            "Contact form integration",
            "3 rounds of revisions",
        ],
        technologies: ["JavaScript", "Vue.js", "Tailwind CSS", "Node.js", "Nginx"]
    },
    {
        name: "E-commerce Solution",
        price: 10000,
        description: "Ideal for businesses ready to start selling products online.",
        features: [
            "Custom e-commerce website",
            "Up to 100 product listings",
            "Secure payment gateway integration",
            "Order management system",
            "Basic inventory tracking",
            "SEO optimization",
            "5 rounds of revisions",
        ],
        technologies: ["PHP", "Laravel", "MySQL", "WooCommerce", "Cloudflare", "Docker"]
    },
    {
        name: "Enterprise Web Application",
        price: 25000,
        description: "Comprehensive solution for large-scale businesses with complex requirements.",
        features: [
            "Fully custom web application",
            "Advanced user authentication and authorization",
            "Database design and optimization",
            "API development and integration",
            "Automated testing suite",
            "Performance optimization",
            "Scalable infrastructure setup",
            "Comprehensive documentation",
            "10 rounds of revisions",
        ],
        technologies: ["TypeScript", "Vue.js", "Node.js", "Elasticsearch", "Kubernetes", "AWS", "GitHub Actions", "Cypress", "Grafana"]
    }
];
---

<Layout title="Services - Custom App Development Packages by Luke">
    <div class="flex flex-col min-h-screen">
        <Navbar/>
        <main class="flex-grow bg-blue-200 py-8 sm:py-16 overflow-y-auto border-y-4 border-black">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="bg-white border-4 border-black p-4 sm:p-8 shadow-[8px_8px_0px_0px_rgba(0,0,0,1)]">
                    <h1 class="text-3xl sm:text-4xl md:text-5xl font-black text-black mb-4 sm:mb-8 transform -rotate-1 break-words">
                        App Development Packages
                    </h1>
                    <p class="text-lg sm:text-xl text-black mb-8 sm:mb-12 bg-blue-100 p-4 border-4 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] inline-block transform rotate-1">
                        Choose the perfect package for your business needs. Each package is customizable and includes
                        end-to-end development services.
                    </p>

                    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8">
                        {packages.map((pkg, index) => (
                                <div class={`bg-white border-4 border-black p-4 sm:p-6 shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] transform ${index % 2 === 0 ? 'rotate-1' : '-rotate-1'} transition-shadow duration-300 hover:shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]`}>
                                    <h2 class="text-xl sm:text-2xl font-black text-black mb-4 break-words">{pkg.name}</h2>
                                    <p class="text-2xl sm:text-3xl font-black text-blue-500 mb-4">${pkg.price}</p>
                                    <p class="text-black mb-4">{pkg.description}</p>
                                    <ul class="list-disc list-inside mb-4">
                                        {pkg.features.map((feature) => (
                                                <li class="text-black">{feature}</li>
                                        ))}
                                    </ul>
                                    <div class="mt-4">
                                        <h3 class="text-base sm:text-lg font-bold text-black mb-2">Technologies:</h3>
                                        <div class="flex flex-wrap gap-2">
                                            {pkg.technologies.map((tech) => (
                                                    <span class="bg-blue-300 text-black px-2 py-1 border-2 border-black text-xs sm:text-sm font-bold">{tech}</span>
                                            ))}
                                        </div>
                                    </div>
                                    <a href="/contact"
                                       class="mt-6 inline-block bg-blue-500 hover:bg-blue-600 text-white font-black py-2 px-4 border-4 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:shadow-[2px_2px_0px_0px_rgba(0,0,0,1)] transition-all duration-300">
                                        Get Started
                                    </a>
                                </div>
                        ))}
                    </div>

                    <div class="mt-16 bg-blue-100 border-4 border-black p-8 shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] transform -rotate-1">
                        <h2 class="text-3xl font-black text-black mb-4">Need a Custom Solution?</h2>
                        <p class="text-xl text-black mb-4">
                            Don't see a package that fits your needs? I specialize in creating tailored solutions for
                            unique business requirements. Let's discuss your project and create a custom package that's
                            perfect for you.
                        </p>
                        <a href="/contact"
                           class="inline-block bg-blue-500 hover:bg-blue-600 text-white font-black py-3 px-6 border-4 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:shadow-[6px_6px_0px_0px_rgba(0,0,0,1)] transition-all duration-300 transform hover:rotate-2">
                            Contact for Custom Quote
                        </a>
                    </div>
                </div>
            </div>
        </main>
        <Footer/>
    </div>
</Layout>